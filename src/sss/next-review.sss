.next-review
	position: relative

	&__img img
		display: block

	&__text
		position: absolute 0
		display: flex
		flex-direction: column
		justify-content: center
		color: #fff rgba(0,0,0, .6)

		.wrapper
			width: 100%

		span
			display: block

		&-title
			font-size: em(48)
			line-height: calc(54 / 48)
			margin: 0 0 10px

		&-subtitle
			font-size: em(18)
			line-height: calc(31 / 18)